<?xml version="1.0" encoding="utf-8"?>
<com.mediatek.rcs.pam.activities.AccountHistoryMsgItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/tv_text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp" />

    <!-- Ip message for text -->
    <TextView
        android:id="@+id/tv_text_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:autoLink="all"
        android:linksClickable="false"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#222222"
        android:textSize="14sp"
        android:visibility="gone" />

    <!-- Ip message for image or video -->
    <LinearLayout
        android:id="@+id/ip_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/image_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/img_minwidth"
                android:minWidth="@dimen/img_minwidth" />

            <ImageView
                android:id="@+id/video_media_paly"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/mms_play_btn" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/image_size_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="center_vertical"
            android:minWidth="@dimen/img_minwidth"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/content_size"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:singleLine="true"
                android:background="#C0C0C0"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>
        </LinearLayout>

    <!-- Ip message for vcard -->
    <LinearLayout
        android:id="@+id/ip_vcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="120dip"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/ip_vcard_icon"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dip"
            android:src="@drawable/ipmsg_chat_contact_vcard" />

        <TextView
            android:id="@+id/ip_vcard_info"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dip"
            android:layout_weight="1.0"
            android:singleLine="true"
            android:textColor="#222222"
            android:textSize="14sp"
            android:text="@string/contact_name" />
    </LinearLayout>

    <!-- IP message for geoloc -->
    <ImageView
        android:id="@+id/ip_geoloc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ipmsg_geolocation"
        android:visibility="gone" />

    <!-- IP message for mixed article (single) -->
    <LinearLayout
        android:id="@+id/ip_single_mix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="180dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/text_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" />
    </LinearLayout>

    <!-- IP message for mixed article (Multiple) -->
    <LinearLayout
        android:id="@+id/ip_multi_mix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_multi_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" >

            <ImageView
                android:id="@+id/iv_header_thumb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="150dp" />

            <TextView
                android:id="@+id/tv_header_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_header_thumb"
                android:background="@color/gray"
                android:padding="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>

    <com.mediatek.rcs.pam.activities.AccountAudioView
        android:id="@+id/ip_audio_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</com.mediatek.rcs.pam.activities.AccountHistoryMsgItemView>